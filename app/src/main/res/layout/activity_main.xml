<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="inputValue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/statusValue"
        android:layout_width="355dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="statusValue"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/RTDValue"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/connectButton"
        app:layout_constraintTop_toBottomOf="@+id/RTDString" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="8dp"
        android:text="connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LVstring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="LV"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputValue" />

    <TextView
        android:id="@+id/HVstring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="HV"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/LVstring"
        app:layout_constraintTop_toTopOf="@+id/LVstring" />

    <TextView
        android:id="@+id/LVValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="------"
        android:textColor="@android:color/background_light"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@+id/LVstring"
        app:layout_constraintTop_toBottomOf="@+id/LVstring" />

    <TextView
        android:id="@+id/HVValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="------"
        android:textColor="@android:color/black"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@+id/HVstring"
        app:layout_constraintTop_toBottomOf="@+id/HVstring" />

    <TextView
        android:id="@+id/bluetoothValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="BTNO"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MTString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="MOTOR"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/HVstring"
        app:layout_constraintTop_toTopOf="@+id/HVstring" />

    <TextView
        android:id="@+id/MTValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="------"
        android:textColor="@android:color/background_light"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@+id/MTString"
        app:layout_constraintTop_toBottomOf="@+id/MTString" />

    <TextView
        android:id="@+id/INVString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="INV"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/MTString"
        app:layout_constraintTop_toTopOf="@+id/MTString" />

    <TextView
        android:id="@+id/INVValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="------"
        android:textColor="@android:color/black"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@+id/INVString"
        app:layout_constraintTop_toBottomOf="@+id/INVString" />

    <TextView
        android:id="@+id/ERRORString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:text="ERROR"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LVValue" />

    <TextView
        android:id="@+id/ERRORValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="----------"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/ERRORString"
        app:layout_constraintTop_toBottomOf="@+id/ERRORString" />

    <TextView
        android:id="@+id/RTDString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="RTD"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/INVValue" />

    <TextView
        android:id="@+id/RTDValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="OFF"
        android:textColor="@android:color/black"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/RTDString"
        app:layout_constraintTop_toTopOf="@+id/RTDString" />

    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bluetooth_no" />
</android.support.constraint.ConstraintLayout>